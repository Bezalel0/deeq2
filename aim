-- Create GUI
local screenGui = Instance.new("ScreenGui")
screenGui.ResetOnSpawn = false
screenGui.Parent = PlayerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 180, 0, 150)  -- Reduced size
frame.AnchorPoint = Vector2.new(1, 0)
frame.Position = UDim2.new(1, -10, 0, 10)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.BorderSizePixel = 0
frame.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 8)  -- Slightly smaller corner radius
corner.Parent = frame

local function createButton(text, position)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, -16, 0, 30)  -- Reduced height and width
    button.Position = position
    button.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    button.Text = text
    button.TextColor3 = Color3.new(1, 1, 1)
    button.TextScaled = true
    button.Parent = frame
    
    local buttonCorner = Instance.new("UICorner")
    buttonCorner.CornerRadius = UDim.new(0, 4)  -- Smaller corner radius for buttons
    buttonCorner.Parent = button
    
    return button
end

local aimbotButton = createButton("Aimbot: OFF", UDim2.new(0, 8, 0, 8))
local teamCheckButton = createButton("Team Check: OFF", UDim2.new(0, 8, 0, 42))
local espButton = createButton("ESP: OFF", UDim2.new(0, 8, 0, 76))
local minimizeButton = createButton("Minimize", UDim2.new(0, 8, 0, 110))

-- Minimized GUI
local minimizedButton = Instance.new("TextButton")
minimizedButton.Size = UDim2.new(0, 40, 0, 40)  -- Smaller minimized button
minimizedButton.AnchorPoint = Vector2.new(1, 0)
minimizedButton.Position = frame.Position
minimizedButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
minimizedButton.Text = "+"
minimizedButton.TextColor3 = Color3.new(1, 1, 1)
minimizedButton.TextScaled = true
minimizedButton.Visible = false
minimizedButton.Parent = screenGui

local minimizedCorner = Instance.new("UICorner")
minimizedCorner.CornerRadius = UDim.new(0, 8)
minimizedCorner.Parent = minimizedButton
